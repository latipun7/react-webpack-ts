{
  "compilerOptions": {
    "allowJs": false,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "module": "CommonJS",
    "noEmit": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2015",

    "strict": true,

    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "assets/*": ["src/assets/*"],
      "lib/*": ["src/lib/*"],
      "styles/*": ["src/styles/*"]
    },
    "typeRoots": ["./node_modules/@types", "./typings"],

    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "forceConsistentCasingInFileNames": true,
    "newLine": "lf",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "public"],
  "include": ["src/**/*", "configs/**/*", "typings/**/*", "webpack.config.ts"]
}
